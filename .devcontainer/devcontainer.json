{
  "name": "Modified BioConductor Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "features": {
      "ghcr.io/MiguelRodo/DevContainerFeatures/github-tokens:1": {}
    },
    "ghcr.io/MiguelRodo/DevContainerFeatures/renv-cache:1": {
      "debug": true,
      "debugRenv": true
    },
    "ghcr.io/MiguelRodo/DevContainerFeatures/repos:2": {},
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "xvfb,vim,libcurl4-openssl-dev,libsecret-1-dev,jq"
    },
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
      "installTinyTex": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "quarto.quarto",
        "REditorSupport.r",
        "mathematic.vscode-pdf",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "bierner.markdown-preview-github-styles"
      ],
      "settings": {
        "dotfiles.repository": "https://github.com/SATVILab/dotfiles.git",
        "dotfiles.targetPath": "$HOME/.dotfiles"
      }
    },
    "codespaces": {
      "repositories": {
        "MiguelRodo/lectures": {
          "permissions": {
            "actions": "write",
            "contents": "write",
            "packages": "read",
            "workflows": "write"
          }
        },
        "MiguelRodo/eval": {
          "permissions": {
            "actions": "write",
            "contents": "write",
            "packages": "read",
            "workflows": "write"
          }
        }
      }
    }
  }
}
